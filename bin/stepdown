#!/usr/bin/env ruby
lib = File.expand_path('../lib/', __FILE__)
$:.unshift lib unless $:.include?(lib)

require 'step_down'
require 'options'

begin

  Options.parse(ARGV)
  Options.validate

  StepDown.new(Options.steps_dir, Options.features_dir, Options.reporter).analyse

rescue Interrupt => e
  puts "Quiting..."
  exit 1
end

